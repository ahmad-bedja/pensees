{% extends 'AbbaPenseesBundle::layout.html.twig' %}

{% block main %}
	<div class="col-md-6 col-md-offset-3">

	{{ form_start(form, {'class': 'form-horizontal'}) }}
		<legend>Nouvel Auteur</legend>
		{{ form_errors(form) }}
		<div class="row">
			<div class="form-group col-lg-12">
				{{ form_label(form.nom,null, {'label_attr': {'class': 'control-label '}})  }}
				{{ form_errors(form.nom) }}
				<div class="controls">
					{{ form_widget(form.nom,  {'attr': {'class': 'form-control .input-large'}}) }}
				</div>
			</div>	
		</div>

		<div class="row">
			<div class="form-group col-lg-12">
				{{ form_label(form.profession,null, {'label_attr': {'class': 'control-label'}})  }}
				{{ form_errors(form.profession) }}
				<div class="controls">
					{{ form_widget(form.profession ,  {'attr': {'class': 'form-control .input-large'}}) }}
				</div>
			</div>
		</div>
		
		<div class="row">
			<div class="form-action col-lg-12">
				<a class="btn btn-default " href="{{path('homepage')}}">Retour Ã  la page d'accueil</a>
				{{ form_label(form.creer) }}
				{{ form_widget(form.creer, {'attr': {'class': 'btn btn-primary pull-right'}}) }}
			</div>
		</div>
		{{ form_rest(form) }} 
	{{ form_end(form) }}
	</div>				
{% endblock %}

			