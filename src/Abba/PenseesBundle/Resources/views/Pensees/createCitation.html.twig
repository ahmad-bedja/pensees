{% extends 'AbbaPenseesBundle::layout.html.twig' %}

{# je pourrais  probablement eviter la duplication du code si je peux iterer sur les les inputs du form  #}
{% block main %}
	<div class="col-md-6 col-md-offset-3">
	{{ form_start(form, {'class': 'form-horizontal'}) }}
		<legend>Nouvelle Citation</legend>
		{{ form_errors(form) }}
		<div class="row">
			<div class="form-group col-lg-12">
				{{ form_label(form.auteur,null, {'label_attr': {'class': 'control-label '}})  }}
				{{ form_errors(form.auteur) }}
				<div class="controls">
					{{ form_widget(form.auteur,  {'attr': {'class': 'form-control .input-large'}}) }}
				</div>
			</div>	
		</div>

		<div class="row">
			<div class="form-group col-lg-12">
				{{ form_label(form.contenu,null, {'label_attr': {'class': 'control-label'}})  }}
				{{ form_errors(form.contenu) }}
				<div class="controls">
					{{ form_widget(form.contenu ,  {'attr': {'class': 'form-control .input-large'}}) }}
				</div>
			</div>
		</div>
		
		<div class="row">
			<div class="form-action col-lg-12">
				<a class="btn btn-default " href="{{path('homepage')}}">Retour Ã  la page d'accueil</a>
				{{ form_label(form.ajouter) }}
				{{ form_widget(form.ajouter, {'attr': {'class': 'btn btn-primary pull-right'}}) }}
			</div>
		</div>
		{{ form_rest(form) }} 
	{{ form_end(form) }}
	</div>			
{% endblock %}

			